#!/bin/sh

WEBLATE=~/weblate/weblate/docs/images/
SCREENSHOTS=weblate_web/static/img/

cp $WEBLATE/screenshot-context.png $SCREENSHOTS/BigScreenshot.png
convert $WEBLATE/checks.png -crop 224x419+779+225 $SCREENSHOTS/dialog-checks.png
convert $WEBLATE/checks.png -crop 224x706+779+859 $SCREENSHOTS/source-info.png
convert $WEBLATE/checks.png -crop 736x425+14+967 $SCREENSHOTS/comment-new.png
